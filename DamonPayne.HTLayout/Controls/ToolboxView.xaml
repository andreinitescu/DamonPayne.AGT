<UserControl x:Class="DamonPayne.HTLayout.Controls.ToolboxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="225" Height="550">
	<Border Height="550" HorizontalAlignment="Left" VerticalAlignment="Top" Width="223" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2,2,2,2" CornerRadius="5,5,5,5">
    <Grid x:Name="LayoutRoot" Background="{StaticResource OrangeGradient}" Height="545" Width="215">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="95"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox x:Name="_ToolboxCategoriesLst" Grid.Row="0" Margin="2,4,2,4">            
        </ListBox>
        <TextBlock x:Name="_descriptionBlock" Grid.Row="1" TextWrapping="Wrap" Style="{StaticResource LabelStyle}" Margin="8,0,20,19" Foreground="{StaticResource KCBlue}" FontFamily="./trajan1r.ttf#Trajan-Regular">
            If there was a description for the component, it would go here.
        </TextBlock>        
    </Grid>		
	</Border>
</UserControl>
