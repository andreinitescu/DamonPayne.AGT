<UserControl x:Class="DamonPayne.HTLayout.Controls.ToolboxCategoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="205" Height="Auto"
             xmlns:dc="clr-namespace:DamonPayne.AGT.Design.Controls;assembly=DamonPayne.AGT.Design">
    <Grid x:Name="LayoutRoot" Background="{StaticResource GrayBGGradient}">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="_categoryHeader" Grid.Row="0" Text="{Binding Path=CategoryName}" FontSize="16" FontFamily="Arial" FontWeight="Bold">Category Header</TextBlock>        
        <dc:WrapLayoutPanel x:Name="WrapPanel" Grid.Row="1"></dc:WrapLayoutPanel>        
    </Grid>
</UserControl>
